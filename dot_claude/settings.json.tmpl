{
  "includeCoAuthoredBy": false,
  "model": "sonnet",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "{{ .chezmoi.sourceDir }}/agents/hooks/session-init.sh",
            "timeout": 30000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "{{ .chezmoi.sourceDir }}/agents/hooks/format-code.sh"
          }
        ]
      }
    ],
    "Notification": [{
      "hooks": [{
        "type": "command",
        {{- if eq .chezmoi.os "darwin" }}
        "command": "afplay /System/Library/Sounds/Glass.aiff"
        {{- else if eq .chezmoi.os "linux" }}
        "command": "spd-say -t female1 \"Notification from $(tmux display-message -p '#S' 2>/dev/null || echo terminal)\""
        {{- end }}
      }]
    }],
    "Stop": [{
      "hooks": [{
        "type": "command",
        {{- if eq .chezmoi.os "darwin" }}
        "command": "afplay /System/Library/Sounds/Tink.aiff"
        {{- else if eq .chezmoi.os "linux" }}
        "command": "spd-say -t female1 \"Claude finished in $(tmux display-message -p '#S' 2>/dev/null || echo terminal)\""
        {{- end }}
      }]
    }]
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754008701811
  },
  "alwaysThinkingEnabled": false,
  "statusLine": {
    "type": "command",
    "command": "printf '%s\\033[01;32m%s@%s\\033[00m:\\033[01;34m%s\\033[00m' \"${debian_chroot:+($debian_chroot)}\" \"$(whoami)\" \"$(hostname -s)\" \"$(pwd)\""
  }
}
